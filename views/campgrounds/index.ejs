<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add new campgrounds</a>
    <%for(let camp of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=camp.images[0].url%> " alt="image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%= camp.title %> </h3>
                        <p class="card-text"><%= camp.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>
                        </p>
                        <a class = "btn btn-primary" href="/campgrounds/<%= camp._id %> ">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
